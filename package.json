{
  "name": "tanker",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn build:identity",
    "build:identity": "(rm -rf packages/identity/dist || 0) && tsc -b packages/identity/config",
    "lint:js": "eslint \"packages/**/*.ts\"",
    "lint:ts": "yarn build && yarn eslint --no-ignore --no-eslintrc -c .eslintrc.compat.yml \"packages/**/dist/**/*.js\"",
    "karma": "karma start config/karma/karma.config.ci.js",
    "test": "mocha \"packages/**/src/**/*.spec.ts\" --exit -require ts-node/register --recursive --full-trace --trace-warnings --reporter=spec",
    "proof": "yarn lint:js && yarn lint:ts && yarn test",
    "coverage": "nyc yarn test"
  },
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "buffer": "6.0.3",
    "codecov": "3.8.1",
    "core-js-pure": "^3.15.2",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-chai-expect": "2.2.0",
    "eslint-plugin-chai-friendly": "0.6.0",
    "eslint-plugin-compat": "^3.11.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-mocha-no-only": "1.1.1",
    "karma": "6.3.20",
    "karma-browserstack-launcher": "1.4.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-edgium-launcher": "https://github.com/matracey/karma-edgium-launcher.git#253b4b506236d16d3e7c450196db1a22ce37aeba",
    "karma-firefox-launcher": "2.1.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "karma-opera-launcher": "1.0.0",
    "karma-safarinative-launcher": "1.1.0",
    "karma-sourcemap-loader": "0.3.8",
    "karma-webpack": "5.0.0",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "process": "^0.11.10",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.5.2",
    "util": "^0.12.3",
    "webpack": "^5.41.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "node >= 14",
    "not IE 11",
    "not dead"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "config",
      "packages/*/config",
      "packages/**/*.spec.ts",
      "packages/**/src/__tests__",
      "packages/**/tests",
      "**/*.d.ts"
    ],
    "sourceMap": true
  },
  "resolutions": {
    "tslib": "^2.3.0",
    "ansi-regex": "^5.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
