{
  "name": "tanker",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn build:identity",
    "build:identity": "(rm -rf packages/identity/dist || 0) && tsc -p packages/identity/config/tsconfig.node.json && tsc -p packages/identity/config/tsconfig.browser.json && tsc -p packages/identity/config/tsconfig.es.json && tsc -p packages/identity/config/tsconfig.types.json",
    "lint:js": "eslint \"packages/**/*.ts\"",
    "test": "mocha \"packages/**/src/**/*.spec.ts\" --exit -r ts-node/register --recursive --full-trace --trace-warnings --reporter=spec",
    "proof": "yarn lint:js && yarn test",
    "coverage": "nyc yarn test"
  },
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "codecov": "3.8.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-chai-expect": "2.2.0",
    "eslint-plugin-chai-friendly": "0.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-mocha-no-only": "1.1.1",
    "mocha": "8.3.0",
    "nyc": "15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "config",
      "packages/*/config",
      "packages/**/*.spec.ts",
      "packages/**/src/__tests__",
      "packages/**/tests",
      "**/*.d.ts"
    ],
    "sourceMap": false
  }
}
